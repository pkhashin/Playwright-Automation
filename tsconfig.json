{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "types": ["node", "@playwright/test"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["tests/**/*", "playwright.config.ts"]
}